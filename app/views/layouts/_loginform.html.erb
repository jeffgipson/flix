
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
      <button type="submit" value="submit" id="submit" class="btn btn-primary" >SIGN IN</button><br/>
  <div style="display: flex;margin-top: 6px;"class="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br/>
  <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>
