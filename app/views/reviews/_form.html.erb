
<%= javascript_include_tag( 'closeform.js' ) %>
<% if current_user %>

<%= form_with(model: @review, remote: true, :html => {:id => "submit_review"}) do |form| %>

<div class="form-group">
  <%= form.label "Your Name" %>
  <%= form.text_field :name, class: "form-control" %>
</div>

  <div class="form-group">
    <%= form.label "Review Title" %>
    <%= form.text_field :title, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= render "rating" %>
  </div>

  <div class="form-group">
    <%= form.label :review %>
    <%= form.text_area :movie_review, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :movie_id, :value => @id %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :username, :value => "guest" %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
   <% end %>

<% else %>

<div id="loginmessage">Please login or sign up to add a review.</div>
<%= render "layouts/loginform" %>
<span style="font-size:27px;" class="loginwithfb"><i class="fa fa-facebook-square"></i>
<%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
</span>

<% end %>
